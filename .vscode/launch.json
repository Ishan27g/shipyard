  "version": "0.2.0",
  "configurations": [

    {
      "name": "Debug - Run",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "debug"
      },
      "args": [
        "run",
        "./examples/single_k3s_cluster"
      ]
    },    {
      "name": "Debug - Destroy",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {},
      "args": [
        "destroy",
      ]
    },
    {
      "name": "Debug - Push",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {},
      "args": [
        "push",
        "nicholasjackson/example-wasm-filter:latest",
        "k8s_cluster.k3s"
      ]
    },
    {
      "name": "Debug - Test",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": [
        "test",
        "./examples/container",
      ]
    }
  ]
}